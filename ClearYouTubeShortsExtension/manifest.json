{
  "manifest_version": 2,
  "name": "YouTube History Buttons",
  "version": "1.0",
  "description": "Injects buttons into YouTube history page to clear rows for shorts",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "history",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/feed/history*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "YouTube History Buttons",
    "default_popup": "popup.html"
  }
}
