{
  "manifest_version": 3,
  "name": "YouTube Clear History Shorts",
  "version": "1.0",
  "description": "Adds buttons into YouTube history page to clear short rows",
  "icons": {
    "128": "DeleteReelsIcon128.png",
    "48": "DeleteReelsIcon48.png",
    "16": "DeleteReelsIcon16.png"
  },
  "permissions": [
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/feed/history*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
